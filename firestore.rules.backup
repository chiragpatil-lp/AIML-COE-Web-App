rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin using custom claims
    // This avoids circular dependency by checking the JWT token instead of Firestore
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // User permissions collection
    match /userPermissions/{userId} {
      // Users can read their own permissions, and admins can read all permissions
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();

      // Admins can create/update/delete any user permissions
      allow write: if isAdmin();
    }
    
    // Allow admins to read/write audit logs
    match /adminAuditLog/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
